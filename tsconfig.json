{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "checkJs": false,
    "isolatedModules": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "declaration.d.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "allowJs": false,
      "resolveJsonModule": true,
      "esModuleInterop": true
    }
  }
}