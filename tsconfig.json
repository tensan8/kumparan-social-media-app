{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "checkJs": false,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "typeRoots": [
      "./types",
      "node_modules/@types",
      "./src/types"
    ],
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "allowJs": true,
      "resolveJsonModule": true
    }
  }
}